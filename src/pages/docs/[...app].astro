      title: "Astro æ–‡æ¡£",
      text: "Astro æ–‡æ¡£ node.js",
      docsify: {
        ...commDocsify,
        search: {
          ...commDocsify.search,
          namespace: 'astro/*'
        },
        name: 'astro',
        nameLink: '/docs/astro#/',
        themeColor: '#3D50F5',
        repo: 'https://github.com/withastro/astro',
        basePath: `/docs/astro/`,
      },
    },
    {
      app: 'music',
      title: "ç½‘æ˜“äº‘éŸ³ä¹ NodeJS ç‰ˆ API",
      text: "ç½‘æ˜“äº‘éŸ³ä¹,ç½‘æ˜“äº‘éŸ³ä¹ api,ç½‘æ˜“äº‘éŸ³ä¹ nodejs,ç½‘æ˜“äº‘éŸ³ä¹ node.js",
      docsify: {
        ...commDocsify,
        search: {
          ...commDocsify.search,
          namespace: 'music/*'
        },
        name: 'ç½‘æ˜“äº‘éŸ³ä¹ API',
        nameLink: '/docs/music#/',
        themeColor: '#42b983',
        repo: 'https://github.com/2015/music-api',
        basePath: `/docs/music/`,
      },
    },
  ];
  return pages.map(({ app, title, text, docsify }) => {
    return {
      params: { app },
      props: { title, text, docsify },
    };
  });
}
