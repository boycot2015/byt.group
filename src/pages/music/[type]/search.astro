---
import PlayListDetail from '@/components/music/playlist/detail.tsx';
import CateList from '@/components/music/playlist/cate.svelte';
import Layout from '@/layouts/Layout.astro';
import { KContainer } from '@ikun-ui/core';
export function getStaticPaths () {
 return [
    {params: {type: 'qq'}},
    {params: {type: 'qianqian'}},
    {params: {type: 'netease'}},
    {params: {type: 'kugou'}},
    {params: {type: 'kuwo'}},
    {params: {type: 'migu'}},
  ];
}
interface Props {
	title: string
}
interface Params {
	[key:string]: string
}
const { title } = Astro.props;
const { type } = Astro.params;
const typeName: Params = {
	'qq': 'QQ音乐',
	'netease': '网易云音乐',
	'kugou': '酷狗音乐',
	'kuwo': '酷我音乐',
	'qianqian': '千千音乐',
	'migu': '咪咕音乐',
}
---

<Layout title={`音乐-${title?title+'-':''}${typeName[type]}`}>
    <KContainer cls='flex-col overflow-hidden h-[100%]'>
        <CateList value={type} client:only="svelte" />
        <PlayListDetail client:only="react" {type}></PlayListDetail>
    </KContainer>
</Layout>
