---
import Layout from '@/layouts/Layout.astro';

import Desc from '@/components/Desc/Desc';
import Card from '@components/Card.astro';
import Header from '@components/Header.vue';
import Footer from '@components/Footer.svelte';

const items = [
	{ href: 'https://docs.astro.build/', title: 'Documentation', body: 'Learn how Astro works and explore the official API docs.' },
	{ href: 'https://astro.build/integrations/', title: 'Integrations', body: 'Supercharge your project with new frameworks and libraries.' },
	{ href: 'https://astro.build/themes/', title: 'Themes', body: 'Explore a galaxy of community-built starter themes.' },
	{ href: 'https://astro.build/chat/', title: 'Community', body: 'Come say hi to our amazing Discord community. ❤️' }
];
---
<Layout title="Welcome to Astro.">
	<main>
		<Header client:load />
		<Desc client:load />
		<ul role="list" class="link-card-grid">
			{items.map(el => <Card
				title={el.title}
				href={el.href}
				body={el.body}
			/>)}
		</ul>
		<Footer client:load />
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
